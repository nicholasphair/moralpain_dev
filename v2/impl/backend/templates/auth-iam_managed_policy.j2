AWSTemplateFormatVersion: 2010-09-09
Description: IAM Managed Policy
Parameters:
  Name:
    Type: String
  Prefix:
    Type: String
    Default: ''

Resources:
  Policy:
    Type: AWS::IAM::ManagedPolicy
    Properties: 
      ManagedPolicyName: !Sub '${Prefix}${Name}'
      PolicyDocument: 
        {{ sceptre_user_data.PolicyDocument }}

Outputs:
  PolicyArn:
    Value: !Ref Policy

